{
  "name": "url-shortner",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "server": "cd backend && nodemon server.js",
    "client": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^3.1.0"
  }
}
